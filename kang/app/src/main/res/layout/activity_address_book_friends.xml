<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_centertitletoolbar" />

    <LinearLayout
        android:id="@+id/search_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_30dp"
        android:layout_marginBottom="@dimen/d_10dp"
        android:layout_marginLeft="@dimen/d_30dp"
        android:layout_marginRight="@dimen/d_30dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:background="@drawable/search_address_book_bg"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <com.xson.common.widget.DrawClickableEditText
            android:id="@+id/keywordEditText"
            style="@style/match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="8dp"
            android:hint="搜索好友"
            android:singleLine="true"
            android:padding="7dp"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView style="@style/line_H1dp_CD" />

    <!--<include layout="@layout/fragment_single_listview"/>-->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorCDCD"
        android:dividerHeight="0.5dp" />

</LinearLayout>
