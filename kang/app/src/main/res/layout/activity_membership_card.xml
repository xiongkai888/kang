<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_centertitletoolbar" />


    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/d_10dp"
        android:orientation="vertical">

        <com.xson.common.widget.CircleImageView
            android:id="@+id/pic_iv"
            android:layout_width="@dimen/d_80dp"
            android:layout_height="@dimen/d_80dp"
            android:layout_marginTop="@dimen/d_20dp"
            android:layout_marginBottom="@dimen/d_10dp"
            android:src="@mipmap/default_pic" />


        <ImageView
            android:id="@+id/iv_barcode_with_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="使用时向服务员出示此条形码"
            android:layout_marginBottom="@dimen/d_20dp"
           style="@style/text14color666"/>

    </LinearLayout>



</LinearLayout>
