<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorF4F4"
    tools:context=".ui.merchant.activity.MerchantOrderDetailsActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ll_bottom"
                android:padding="10dp">

                <TextView
                    style="@style/text14color666"
                    android:drawableLeft="@mipmap/icon_user_data"
                    android:drawablePadding="5dp"
                    android:text="个人信息" />

            </LinearLayout>


            <LinearLayout
                style="@style/ll_bottom"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/text14color666"
                    android:text="姓名：" />

            </LinearLayout>

            <LinearLayout
                style="@style/ll_bottom"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tel_tv"
                    style="@style/text14color666"
                    android:text="电话：" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/address_tv"
                    style="@style/text14color666"
                    android:lineSpacingMultiplier="1.2"
                    android:text="地址：" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF4F4" />

            <LinearLayout
                style="@style/ll_bottom"
                android:padding="10dp">

                <TextView
                    style="@style/text14color666"
                    android:drawableLeft="@mipmap/m_serve_items"
                    android:drawablePadding="5dp"
                    android:text="服务项目" />

            </LinearLayout>


            <LinearLayout
                style="@style/ll_bottom"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/item_name_tv"
                    style="@style/text14color666"
                    android:drawableLeft="@mipmap/icon_item"
                    android:drawablePadding="@dimen/d_5dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/ll_bottom"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/time_tv"
                    style="@style/text14color666"
                    android:drawableLeft="@mipmap/icon_date"
                    android:drawablePadding="@dimen/d_5dp" />


            </LinearLayout>


            <LinearLayout
                style="@style/ll_no_border"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    style="@style/text14color666"
                    android:drawableLeft="@mipmap/icon_people_num"
                    android:drawablePadding="@dimen/d_5dp"
                    android:text="份数" />

                <TextView
                    android:id="@+id/num_tv"
                    style="@style/text14color666"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:text="0" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF4F4" />

            <LinearLayout
                style="@style/ll_bottom"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/text14color666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单号"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_no_tv"
                    style="@style/text14color666"
                    android:layout_margin="10dp" />


            </LinearLayout>

            <LinearLayout
                style="@style/ll_bottom"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/text14color666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下单时间"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_time_tv"
                    style="@style/text14color666"
                    android:layout_margin="10dp" />


            </LinearLayout>

            <LinearLayout
                style="@style/ll_bottom"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/text14color666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总价："
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_price_tv"
                    style="@style/text14color666"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorF5484A" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF4F4" />

            <LinearLayout
                style="@style/ll_bottom"
                android:padding="10dp">

                <TextView
                    style="@style/text14color666"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="订单状态" />

                <TextView
                    android:id="@+id/pay_way_tv"
                    style="@style/text14color666" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorF4F4" />


        </LinearLayout>

    </ScrollView>

    <include layout="@layout/include_item_order_bottom"/>

</LinearLayout>
