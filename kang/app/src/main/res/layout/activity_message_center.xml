<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_match_parent_no"
    android:layout_height="match_parent"
    tools:context=".ui.home.activity.MessageCenterActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <LinearLayout
        android:id="@+id/ll_announcement"
        style="@style/ll_bottom"
        android:layout_marginTop="@dimen/d_10dp"
        android:padding="@dimen/d_10dp">

        <ImageView
            android:src="@mipmap/icon_message_center1"
            style="@style/text" />

        <LinearLayout
            android:layout_width="@dimen/d_0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/d_10dp"
            style="@style/v_match_parent_no">

            <TextView
                android:text="公告信息"
                style="@style/text" />

            <TextView
                android:id="@+id/gonggao_tv"
                android:layout_marginTop="@dimen/d_5dp"
                android:lines="1"
                android:ellipsize="end"
                style="@style/text12color666" />

        </LinearLayout>

        <ImageView
            android:src="@mipmap/in_right"
            style="@style/text" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_notice"
        style="@style/ll_bottom"
        android:padding="@dimen/d_10dp">

        <ImageView
            android:src="@mipmap/icon_message_center2"
            style="@style/text" />

        <LinearLayout
            android:layout_width="@dimen/d_0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/d_10dp"
            style="@style/v_match_parent_no">

            <TextView
                android:text="@string/private_letter"
                style="@style/text" />

            <TextView
                android:id="@+id/sixin_tv"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/d_5dp"
                style="@style/text12color666" />

        </LinearLayout>

        <ImageView
            android:src="@mipmap/in_right"
            style="@style/text" />

    </LinearLayout>


</LinearLayout>
