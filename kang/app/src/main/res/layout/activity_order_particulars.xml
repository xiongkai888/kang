<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.lanmei.kang.ui.details.OrderParticularsActivity">

    <include layout="@layout/include_centertitletoolbar"/>

    <LinearLayout
        style="@style/ll_bottom"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/text14color666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="项目"/>

        <TextView
            style="@style/text14color666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="单价"/>

        <TextView
            style="@style/text14color666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="数量"/>

        <TextView
            style="@style/text14color666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="时间(h)"/>

        <TextView
            style="@style/text14color666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="合计(元)"/>

    </LinearLayout>

    <com.lanmei.kang.widget.WithScrollListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"/>

</LinearLayout>
