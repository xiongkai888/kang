<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/text_match"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/text16colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/d_15dp"
        android:text="@string/input_consume_code" />

    <EditText
        android:id="@+id/input_pwd_et"
        style="@style/text_match"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_16sp"
        android:layout_marginBottom="@dimen/d_15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:inputType="number"
        android:gravity="center"
        android:maxLength="8"
        android:background="@drawable/button_apply_4_radius"
        android:padding="@dimen/d_5dp" />

    <TextView style="@style/line_H1dp_CD" />

    <LinearLayout style="@style/ll_no_border">

        <TextView
            android:id="@+id/no_tv"
            style="@style/setting_text"
            android:gravity="center"
            android:text="@string/cancel" />

        <TextView style="@style/line_V1dp_CD" />


        <TextView
            android:id="@+id/yes_tv"
            style="@style/setting_text"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/sure" />

    </LinearLayout>

</LinearLayout>
