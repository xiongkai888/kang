<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_top"
    android:gravity="right">


    <TextView
        android:id="@+id/order_1"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/order_minWidth"
        android:layout_height="@dimen/d_30dp"
        android:layout_margin="@dimen/d_10dp"
        android:background="@drawable/mine_order_w"
        android:gravity="center"
        android:text="@string/cancel_order" />

    <TextView
        android:id="@+id/order_2"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/order_minWidth"
        android:layout_height="@dimen/d_30dp"
        android:layout_margin="@dimen/d_10dp"
        android:background="@drawable/mine_order_w"
        android:gravity="center"
        android:text="@string/contact_merchant" />

    <TextView
        android:id="@+id/order_3"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/order_minWidth"
        android:layout_height="@dimen/d_30dp"
        android:layout_margin="@dimen/d_10dp"
        android:background="@drawable/mine_order"
        android:gravity="center"
        android:text="@string/go_consumption"
        android:textColor="@color/white" />


</LinearLayout>
