<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent"
    android:paddingBottom="@dimen/d_6dp"
    android:paddingLeft="@dimen/d_10dp"
    android:paddingRight="@dimen/d_10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/d_6dp">

    <com.xson.common.widget.DrawClickableEditText
        android:id="@+id/keywordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bg"
        android:drawableLeft="@mipmap/merchant_tab_search"
        android:drawablePadding="8dp"
        android:hint="@string/input_keyword"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:padding="7dp"
        android:focusable="false"
        android:singleLine="true"
        android:textSize="@dimen/txt_12sp" />

</LinearLayout>
