<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_bottom"
    android:orientation="vertical"
    android:padding="@dimen/d_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/items_icon_iv"
            android:layout_width="@dimen/d_80dp"
            android:layout_height="@dimen/d_80dp"
            android:layout_marginRight="@dimen/d_10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_pic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                style="@style/text"
                android:text="@string/developing"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/price_tv"
                style="@style/text"
                android:layout_marginTop="@dimen/d_3dp"
                android:layout_marginBottom="@dimen/d_3dp"
                android:text="@string/price_sub"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/num_tv"
                style="@style/text12color999"
                android:ellipsize="end"
                android:lines="1" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
