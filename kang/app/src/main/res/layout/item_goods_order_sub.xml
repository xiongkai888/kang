<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_divider"
    android:padding="@dimen/d_10dp">

    <ImageView
        android:id="@+id/items_icon_iv"
        android:layout_width="@dimen/d_100dp"
        android:layout_height="@dimen/d_100dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_pic" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/text"
        android:layout_toRightOf="@id/items_icon_iv"
        android:text="@string/mine" />

    <TextView
        android:id="@+id/specifications_name_tv"
        style="@style/text"
        android:layout_below="@id/title_tv"
        android:layout_toRightOf="@id/items_icon_iv"
        android:text="@string/mine" />

    <LinearLayout
        style="@style/v_match_parent_no"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right">

        <TextView
            android:id="@+id/price_num_tv"
            style="@style/text"
            android:gravity="right"
            android:text="000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/mine_order"
            android:gravity="center"
            android:minWidth="@dimen/order_minWidth"
            android:text="@string/bask_in_a_single_comment"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
