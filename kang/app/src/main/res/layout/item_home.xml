<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <include layout="@layout/include_label_iv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/name_tv"
            style="@style/text16color4D4D" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_tv"
                style="@style/text14colorFD" />

            <TextView
                style="@style/text14color999"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout style="@style/text_match">

            <ImageView
                android:id="@+id/index_iv"
                style="@style/text"
                android:layout_marginRight="@dimen/d_2dp"
                android:layout_marginTop="@dimen/d_3dp"
                android:src="@mipmap/icon_coordinate" />

            <TextView
                android:id="@+id/distance_tv"
                style="@style/text12color666"
                android:layout_width="wrap_content"
                android:lineSpacingMultiplier="1.1"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
