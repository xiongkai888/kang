<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_no_border"
    android:paddingTop="@dimen/d_10dp"
    android:paddingBottom="@dimen/d_10dp">

        <TextView
            android:id="@+id/goods_no_tv"
            style="@style/text12colorBlack"
            android:layout_weight="2"
            android:layout_width="@dimen/d_0dp"
            android:gravity="center"
            android:text="商品编号" />

        <TextView
            android:id="@+id/goods_name_tv"
            style="@style/text12colorBlack"
            android:layout_weight="3"
            android:layout_width="@dimen/d_0dp"
            android:gravity="center"
            android:text="商品名称" />

        <TextView
            android:id="@+id/inventory_num_tv"
            style="@style/text12colorBlack"
            android:layout_weight="2"
            android:layout_width="@dimen/d_0dp"
            android:gravity="center"
            android:text="库存" />

</LinearLayout>
